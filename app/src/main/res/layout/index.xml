<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien"
    tools:context=".index">

    <Button
        android:id="@+id/Admin"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Admin"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="btnAdmin"/>

    <Button
        android:id="@+id/Guru"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="GURU"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/Admin"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/Admin"
        app:layout_constraintTop_toBottomOf="@+id/Admin"
        android:onClick="btnGuru"/>

    <Button
        android:id="@+id/Siswa"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="Siswa"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/Guru"
        app:layout_constraintStart_toStartOf="@+id/Guru"
        app:layout_constraintTop_toBottomOf="@+id/Guru"
        android:onClick="btnSiswa"/>
</androidx.constraintlayout.widget.ConstraintLayout>
